# view/main_view.kv
<MainView>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: '40dp'
        Button:
            text: "Menu"
            on_press: root.controller.menu_button_pressed()
        Button:
            text: "Settings"
            on_press: root.controller.settings_button_pressed()
        Button:
            text: "Addresse ip"
            on_press: root.controller.ip_button_pressed()

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.7

            ScrollView:
                id: log_scroll
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 10
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'bottom'
                    BoxLayout:
                        id: log_box
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: 10
                        spacing: 10

            BoxLayout:
                size_hint_y: None
                height: '80dp'
                Button:
                    height: '80dp'
                    id: main_button
                    text: "lancer la procédure de dévérouillage."
                    on_press: root.controller.unlock(self)
                

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3333

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: '7'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: '8'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: '9'
                    on_press: root.controller.numpad_button_pressed(self)

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: '4'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: '5'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: '6'
                    on_press: root.controller.numpad_button_pressed(self)

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: '1'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: '2'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: '3'
                    on_press: root.controller.numpad_button_pressed(self)

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'ok'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: '0'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: 'C'
                    on_press: root.controller.numpad_button_pressed(self)

            BoxLayout:
                orientation: 'horizontal'
                height: '80dp'

                Button:
                    text: 'Oui'
                    on_press: root.controller.numpad_button_pressed(self)
                Button:
                    text: 'Non'
                    on_press: root.controller.numpad_button_pressed(self)
